{% extends 'base.html.twig' %}

{% block title %}Demand{% endblock %}

{% block body %}
    <h1>Demand</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Pseudo</th>
                <td>{{ demand.user.pseudo }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ demand.user.location }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ demand.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ demand.text }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ demand.photo }}" alt=""></td>
            </tr>
            <tr>
                <th>Date_created</th>
                <td>{{ demand.dateCreated ? demand.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_modified</th>
                <td>{{ demand.dateModified ? demand.dateModified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ demand.deleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>


    {# <a href="{{ path('app_demand_relation_new') }}">contact</a> #}
        <form action="{{ path('app_demand_relation_new') }}" method="POST">
            <input name="demandId" type="hidden" name="demandId" value= "{{ demand.id }}">
            <button type="submit" class="btn btn-outline-primary">
                <span>Contacter</span>
            </button>
        </form>

    
    <a href="{{ path('app_demand_index') }}">back to list</a>

    {% if app.user == demand.user %}
    <a href="{{ path('app_demand_edit', {'id': demand.id}) }}">edit</a>
    {{ include('demand/_delete_form.html.twig', {'id': demand.id}) }}
    {% endif %}

    {% for demand_relation in demand_relations %}

        {% if demand_relation.user == app.user and demand.id == demand_relation.demand.id  %} 
            <span>Vous avez contact√©: {{demand.user.pseudo}} </span>
        {% endif %}

    {% endfor %}

   
{% endblock %}
