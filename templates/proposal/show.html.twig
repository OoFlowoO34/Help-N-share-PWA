{% extends 'base.html.twig' %}

{% block title %}Proposal{% endblock %}

{% block body %}
    <h1>Proposal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proposal.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ proposal.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ proposal.text }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ proposal.photo }}</td>
            </tr>
            <tr>
                <th>Date_created</th>
                <td>{{ proposal.dateCreated ? proposal.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_modified</th>
                <td>{{ proposal.dateModified ? proposal.dateModified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ proposal.deleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_proposal_index') }}">back to list</a>

    <a href="{{ path('app_proposal_edit', {'id': proposal.id}) }}">edit</a>

    {{ include('proposal/_delete_form.html.twig') }}
{% endblock %}
